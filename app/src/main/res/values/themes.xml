<resources>
    <!-- Base application theme. -->
    <style name="Theme.IMDbApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/yellow_darker</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/multiplier_7dp</item>
        <item name="android:paddingRight">@dimen/multiplier_7dp</item>
        <item name="android:minWidth">@dimen/multiplier_34dp</item>
        <item name="android:minHeight">@dimen/multiplier_34dp</item>
        <item name="iconSize">@dimen/multiplier_20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/toolbar_color_control_normal</item>
    </style>

    <style name="RegistrationTextFields" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/multiplier_6dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/multiplier_6dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/multiplier_6dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/multiplier_6dp</item>
        <item name="android:layout_marginTop">@dimen/multiplier_6dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">#919191</item>
        <item name="boxStrokeColor">#ccc</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">#919191</item>
    </style>

    <style name="AccessButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/multiplier_9sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_button_text</item>
        <item name="cornerRadius">@dimen/multiplier_6dp</item>
        <item name="backgroundTint">@color/button_login</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@drawable/nav_background_curved</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/yellow_brand</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:foreground">@android:color/darker_gray</item>
    </style>

    <style name="ExpandedCustom">
        <item name="android:textColor">#00000000</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="followListButton">
        <item name="android:layout_marginTop">@dimen/multiplier_12dp</item>
        <item name="backgroundTint">@color/yellow_brand</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/multiplier_8sp</item>

    </style>

</resources>